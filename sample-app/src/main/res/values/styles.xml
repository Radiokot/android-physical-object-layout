<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="CreditCardNumber">
        <item name="fontPath">fonts/cardnumber.ttf</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.2</item>
        <item name="android:textColor">#FFDA64</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">monospace</item>
        <item name="android:textSize" tools:ignore="PxUsage">50px</item>
    </style>
</resources>